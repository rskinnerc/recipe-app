<h1 class="text-orange-900 text-2xl my-4 text-right font-semibold">Add Food</h1>
<div class="border border-orange-500 rounded-lg p-3">
  <%= form_with model: Food.new, class: 'grid grid-cols-2 gap-3' do |form| %>
   <div class="col-span-2 flex flex-col">
    <%= form.label :name, 'Food' %>
    <%= form.text_field :name %>
   </div>
  <div class="col-span-2 flex flex-col">
    <%= form.label :measurement_unit, 'Measurement Unit' %>
    <%= form.text_field :measurement_unit %>
  </div>
  <div class="col-span-1 flex flex-col">
    <%= form.label :price, 'Unit Price' %>
    <%= form.number_field :price %>
  </div>
  <div class="col-span-1 flex flex-col">
    <%= form.label :quantity, 'Quantity (you own)' %>
    <%= form.number_field :quantity %>
  </div>
  <%= form.submit 'Add Food', class: 'text-white bg-orange-500 font-semibold my-4 rounded-md p-2' %>
  <% end %>
</div>