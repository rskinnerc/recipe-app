<h1 class="text-orange-900 text-2xl my-4 text-right font-semibold">Add Recipe</h1>
<div class="border border-orange-500 rounded-lg p-3">
<%= form_with model: @recipe, class: 'grid grid-cols-2 gap-3' do |form| %>
  <div class="col-span-2 flex flex-col">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="col-span-2 flex flex-col">
    <%= form.label 'Description (steps)' %>
    <%= form.text_area :description %>
  </div>
  <div class="col-span-1 flex flex-col">
    <%= form.label 'Preparation Time (min)' %>
    <%= form.number_field :preparation_time %>
  </div>
  <div class="col-span-1 flex flex-col">
    <%= form.label 'cooking Time (min)' %>
    <%= form.number_field :cooking_time %>
  </div>
  <div class="col-span-1 flex gap-3 mt-4">
    <%= form.check_box :public %>
    <%= form.label :public, 'Public Recipe?' %>
  </div>
  <%= form.submit nil, class: 'text-white bg-orange-500 font-semibold my-4 rounded-md p-2' %>
<% end %>